<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>UserManagementSystem</display-name>
  
  <welcome-file-list>
    <welcome-file>/login.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.bridgelabz.usermanagementsystem.controller.Login</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login-process</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>forgot</servlet-name>
    <jsp-file>/jsp/forgotPassword.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>forgot</servlet-name>
    <url-pattern>/forgotPassword.jsp</url-pattern>
</servlet-mapping>
  
</web-app>